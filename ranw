-- Modern UI Skeleton (ปลอดภัย ไม่รวมฟังก์ชันขโมยของ)
-- ภาษาไทย, พื้นหลังดำโปร่งใส, ปุ่มเปิด/ปิด, โลโก้จาก Asset ID ที่ให้มา

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- สร้าง ScreenGui ถ้ายังไม่มี
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ModernUIExample"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Overlay (แบ็คกราวด์โปร่งใสสีดำ)
local overlay = Instance.new("Frame")
overlay.Name = "Overlay"
overlay.Size = UDim2.new(1, 0, 1, 0)
overlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
overlay.BackgroundTransparency = 0.6
overlay.BorderSizePixel = 0
overlay.Visible = false
overlay.Parent = screenGui

local overlayCorner = Instance.new("UICorner")
overlayCorner.CornerRadius = UDim.new(0, 0)
overlayCorner.Parent = overlay

-- Main container
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 380, 0, 520)
mainFrame.Position = UDim2.new(0.5, -190, 0.5, -260)
mainFrame.BackgroundTransparency = 0 -- ไม่โปร่งใส เพื่อเห็น gradient
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
mainFrame.BorderSizePixel = 0
mainFrame.ClipsDescendants = true
mainFrame.Parent = screenGui

local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = UDim.new(0, 16)
mainCorner.Parent = mainFrame

-- Gradient background
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(35, 35, 45)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(18, 18, 25))
})
gradient.Rotation = 45
gradient.Parent = mainFrame

-- Shadow (ใส่เบาๆ เพื่อความลึก)
local shadow = Instance.new("ImageLabel")
shadow.Name = "Shadow"
shadow.Size = UDim2.new(1, 20, 1, 20)
shadow.Position = UDim2.new(0, -10, 0, -10)
shadow.Image = "rbxassetid://6023426926" -- เบลอเงาเบาๆ (ตัวอย่างของ Roblox)
shadow.ScaleType = Enum.ScaleType.Slice
shadow.SliceCenter = Rect.new(20, 20, 280, 280)
shadow.BackgroundTransparency = 1
shadow.ZIndex = 0
shadow.Parent = mainFrame

-- Title bar
local titleBar = Instance.new("Frame")
titleBar.Name = "TitleBar"
titleBar.Size = UDim2.new(1, 0, 0, 45)
titleBar.BackgroundTransparency = 0
titleBar.BackgroundColor3 = Color3.fromRGB(60, 60, 75)
titleBar.BorderSizePixel = 0
titleBar.Parent = mainFrame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 16)
titleCorner.Parent = titleBar

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -100, 1, 0)
titleLabel.Position = UDim2.new(0, 12, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "แดชบอร์ดตัวอย่าง"
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextScaled = true
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleBar

-- Logo (จาก Asset ID) - ปรับขนาดให้กลม
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0, 36, 0, 36)
logo.Position = UDim2.new(1, -48, 0.5, -18)
logo.BackgroundTransparency = 1
logo.Image = "rbxassetid://135287785267863" -- โลโก้ผู้ใช้
logo.ScaleType = Enum.ScaleType.Fit
logo.Parent = titleBar

local logoCorner = Instance.new("UICorner")
logoCorner.CornerRadius = UDim.new(0, 8)
logoCorner.Parent = logo

-- ปุ่มปิด/เปิด UI (toggle) แบบลอยอยู่มุมขวาล่าง
local toggleBtn = Instance.new("TextButton")
toggleBtn.Name = "ToggleBtn"
toggleBtn.Size = UDim2.new(0, 50, 0, 50)
toggleBtn.Position = UDim2.new(1, -70, 1, -70)
toggleBtn.AnchorPoint = Vector2.new(0, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
toggleBtn.BorderSizePixel = 0
toggleBtn.AutoButtonColor = true
toggleBtn.Text = "ปิด"
toggleBtn.Font = Enum.Font.GothamSemibold
toggleBtn.TextScaled = true
toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleBtn.Parent = screenGui

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 12)
toggleCorner.Parent = toggleBtn

-- ไอคอนเปิด/ปิด (วงกลมข้างใน)
local toggleIcon = Instance.new("Frame")
toggleIcon.Size = UDim2.new(0, 20, 0, 20)
toggleIcon.Position = UDim2.new(0.5, -10, 0.5, -10)
toggleIcon.BackgroundColor3 = Color3.fromRGB(120, 220, 255)
toggleIcon.BorderSizePixel = 0
oggleIconCorner = Instance.new("UICorner")
oggleIconCorner.CornerRadius = UDim.new(1, 0)
oggleIconCorner.Parent = toggleIcon
toggleIcon.Parent = toggleBtn

local uiOpen = true

local function updateToggleText()
    toggleBtn.Text = uiOpen and "ปิด" or "เปิด"
end

-- ฟังก์ชันเปิดปิด UI ด้วย Tween
local function setUIVisible(visible)
    uiOpen = visible
    updateToggleText()
    if visible then
        overlay.Visible = true
        TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {BackgroundTransparency = 0}):Play()
        TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {Position = UDim2.new(0.5, -190, 0.5, -260)}):Play()
    else
        TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {Position = UDim2.new(0.5, -190, 1, 100)}):Play()
        delay(0.3, function()
            overlay.Visible = false
        end)
    end
end

-- เชื่อมปุ่ม toggle
toggleBtn.MouseButton1Click:Connect(function()
    setUIVisible(not uiOpen)
end)

-- เริ่มต้นให้ UI แสดง
setUIVisible(true)

-- ตัวอย่างปุ่มภายใน UI
local sampleBtn = Instance.new("TextButton")
sampleBtn.Size = UDim2.new(0, 160, 0, 40)
sampleBtn.Position = UDim2.new(0, 20, 0, 70)
sampleBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 100)
sampleBtn.BorderSizePixel = 0
sampleBtn.AutoButtonColor = true
sampleBtn.Text = "ปุ่มตัวอย่าง"
sampleBtn.Font = Enum.Font.GothamSemibold
sampleBtn.TextScaled = true
sampleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
sampleBtn.Parent = mainFrame
local sampleCorner = Instance.new("UICorner")
sampleCorner.CornerRadius = UDim.new(0, 8)
sampleCorner.Parent = sampleBtn

sampleBtn.MouseButton1Click:Connect(function()
    print("กดปุ่มตัวอย่างแล้ว")
end)

-- ฟังก์ชัน placeholder แทนที่จะเป็นฟังก์ชันการขโมยของ
local function placeholderFunction()
    -- ใส่ logic ที่ปลอดภัย เช่น แสดงข้อมูลผู้เล่น, สถิติ, หรือฟีเจอร์ที่ถูกต้อง
    print("เรียกใช้ฟังก์ชันตัวอย่าง")
end

-- ตัวอย่างเรียกใช้
placeholderFunction()
