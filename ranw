    -- Button effect
    stealAllSelectedBtn.BackgroundColor3 = Color3.fromRGB(160, 90, 40)
    task.wait(0.1)
    stealAllSelectedBtn.BackgroundColor3 = Color3.fromRGB(200, 120, 60)
    
    stealAllFromSelectedPlayer()
end)

